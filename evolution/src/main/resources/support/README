cp $DEPLOY_ROOT/support/subscribergroup.* <_NGLM_SUBSCRIBERGROUP_DATA_>
$DEPLOY_ROOT/bin/update-subscribergroup.sh new foobar 'FooBar Segment' subscribergroup.001
